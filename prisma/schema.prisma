generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CategoryStatus {
  ACTIVE
  INACTIVE
}

model Category {
  id      Int           @id @default(autoincrement())
  name    String        @unique
  status  CategoryStatus @default(ACTIVE)
  posts   Post[]
  users   User[]   @relation("UserSubscription")
}

model Post {
  uuid          String    @id @default(uuid())
  title         String
  content       String
  category      Category  @relation(fields: [categoryName], references: [name])
  categoryName   String
}

model User{
  uuid        String  @id  @default(uuid())
  sub         String
  name        String
  email       String
  studentId   String
  phoneNumber String

  subcriptions   Category[] @relation("UserSubscription")
}